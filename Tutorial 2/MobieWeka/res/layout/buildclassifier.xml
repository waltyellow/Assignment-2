<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical"
 android:layout_width="fill_parent"
 android:layout_height="fill_parent">
 
	<LinearLayout
		android:id="@+id/chooseclassifier_layout"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">  
		<ScrollView 
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1">
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"> 
				<TextView
					android:id="@+id/correctrate"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Choose Classifier" 
					android:textSize="20px"/>
				<Spinner  
					android:id="@+id/spinner_1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:drawSelectorOnTop="false"/>
				<TextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Choose Classifier Var" 
					android:textSize="20px"/>
				<Spinner  
					android:id="@+id/spinner_2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:drawSelectorOnTop="false"/>
				<RelativeLayout
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
					<TextView
						android:id = "@+id/show_trainfile"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Train File" 
						android:textSize="20px"/>
					<Button
						android:id="@+id/choosetrainfile"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						style="?android:attr/buttonStyleSmall"
						android:layout_alignParentRight="true"
						android:text="Change"/>
					<Button
						android:id="@+id/trainfiledetail"
						android:layout_width="60px"
						android:layout_height="wrap_content"
						android:layout_toLeftOf="@id/choosetrainfile"
						style="?android:attr/buttonStyleSmall"
						android:text="Detail"/>
					<TextView
						android:id="@+id/classifier_trainflie"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_below="@id/show_trainfile"
						android:textSize="20px"
						android:text="" />
				</RelativeLayout>
				<RelativeLayout
					xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content">
					<TextView
						android:id="@+id/show_testfile"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Test File" 
						android:textSize="20px"/>
					<Button
						android:id="@+id/choosetestfile"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						style="?android:attr/buttonStyleSmall"
						android:layout_alignParentRight="true"
						android:text="Change"/>
					<Button
						android:id="@+id/testfiledetail"
						android:layout_width="60px"
						android:layout_height="wrap_content"
						android:layout_toLeftOf="@id/choosetestfile"
						style="?android:attr/buttonStyleSmall"
						android:text="Detail"/>
					<TextView
						android:layout_below="@id/show_testfile"
						android:id="@+id/classifier_testfile"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="" 
						android:textSize="20px"/>  
				</RelativeLayout>
				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"> 
					<Button 
						android:layout_marginTop="30px"
						android:id="@+id/train_button"
						android:layout_width="100px"
						android:layout_height="wrap_content"
						android:text="Train"/>
					<Button 
						android:layout_marginTop="30px"
						android:id="@+id/test_button"
						android:layout_width="100px"
						android:layout_height="wrap_content"
						android:text="Test"/>
					<Button 
						android:layout_marginTop="30px"
						android:id="@+id/load_model"
						android:layout_width="100px"
						android:layout_height="wrap_content"
						android:text="Load Model"/>
				</LinearLayout>				
			</LinearLayout>	
		</ScrollView>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="30px"
			android:background="#808080"> 
			<ProgressBar 
				android:id="@+id/ProgressBar"   
				android:layout_width="30px" 
				android:layout_height="30px"/>
			<TextView 
				android:id="@+id/show_state"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:text=""
				android:textSize="20px"/>
		</LinearLayout>
	</LinearLayout>

	
	<LinearLayout
		android:id="@+id/classifiermodel_layout"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"> 
		<Button 
			android:id="@+id/save_model"
			android:layout_width="200px"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="Save Model"/>
		<ScrollView 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" 
			android:scrollbarStyle="outsideOverlay"> 
			<HorizontalScrollView 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent">
				<TextView 
					android:id="@+id/model_text"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:text=""/>
			</HorizontalScrollView>
		</ScrollView>	   
	</LinearLayout>
   
   
	<LinearLayout
		android:id="@+id/classifiertestresult_layout"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"> 
		<Button 
			android:id="@+id/SummaryString"
			android:layout_width="200px"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="SummaryResult"/>
		<Button 
			android:id="@+id/MatrixString"
			android:layout_width="200px"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="MatrixResult"/>
		<Button 
			android:id="@+id/ClassDetailsString"
			android:layout_width="200px"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="ClassDetailsString"/>
		<ScrollView 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" 
			android:scrollbarStyle="outsideOverlay"> 
			<HorizontalScrollView 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent">
				<TextView 
					android:id="@+id/testresutl_text"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:text=""/>
			</HorizontalScrollView>
		</ScrollView>
	</LinearLayout>

   
</FrameLayout>

